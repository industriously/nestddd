{
  "name": "account-server",
  "version": "0.0.1",
  "description": "nestjs application server for authentication & authorization.",
  "author": "rojiwon",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git@github.com-industriously:industriously/account-server.git"
  },
  "bugs": {
    "url": "https://github.com/industriously/account-server/issues"
  },
  "main": "dist/main",
  "scripts": {
    "build": "rimraf dist && ttsc -p ./tsconfig.build.json",
    "node:dev": "npm run build && node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "npm run build && pm2 start ecosystem.config.js --env production",
    "start:debug": "nest start --debug --watch",
    "pm2:dev": "npm run build && pm2 start ecosystem.config.js && pm2 save",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js && pm2 save --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
    "swagger": "nestia swagger",
    "sdk": "rimraf ./src/sdk && nestia sdk",
    "db:migrate": "prisma migrate dev",
    "db:dashboard": "prisma studio"
  },
  "dependencies": {
    "@nestia/core": "^1.0.7",
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@prisma/client": "^4.9.0",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "helmet": "^6.0.1",
    "joi": "^17.7.0",
    "mysql2": "^3.0.1",
    "prisma": "^4.9.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "typia": "^3.4.22"
  },
  "devDependencies": {
    "@nestia/sdk": "^1.0.3",
    "@nestjs/cli": "^9.1.8",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.2.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.15",
    "@types/express-session": "^1.17.5",
    "@types/jest": "29.2.6",
    "@types/node": "^18.11.18",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.3.1",
    "nestia": "^4.0.4",
    "pm2": "^5.2.2",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.2",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.4",
    "typescript-transform-paths": "^3.4.6"
  }
}
