{
  "name": "account-server",
  "version": "0.0.1",
  "description": "nestjs application server for authentication & authorization.",
  "author": "rojiwon",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git@github.com-industriously:industriously/account-server.git"
  },
  "bugs": {
    "url": "https://github.com/industriously/account-server/issues"
  },
  "main": "dist/main",
  "scripts": {
    "build": "rimraf dist && ttsc -p ./tsconfig.build.json",
    "dev": "npm run build && node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "npm run build && pm2 start ecosystem.config.js --env production",
    "start:debug": "nest start --debug --watch",
    "pm2:dev": "npm run build && pm2 start ecosystem.config.js && pm2 save",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js && pm2 save --force",
    "test": "cross-env NODE_ENV=test jest",
    "test:cov": "rimraf coverage && npm run test -- --coverage",
    "swagger": "nestia swagger",
    "sdk": "rimraf ./src/sdk && nestia sdk",
    "nestia": "npm run swagger && npm run sdk",
    "schema": "ls ./prisma/schema/*.prisma | xargs cat > ./prisma/schema.prisma",
    "db:migrate": "rimraf db && npm run schema && prisma migrate dev",
    "db:status": "npm run schema && prisma migrate status",
    "db:dashboard": "prisma studio"
  },
  "dependencies": {
    "@devts/nestjs-auth": "^1.3.7",
    "@nestia/core": "^1.0.10",
    "@nestjs/common": "^9.3.8",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.8",
    "@nestjs/jwt": "^10.0.2",
    "@nestjs/platform-express": "^9.3.8",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "helmet": "^6.0.1",
    "joi": "^17.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "typia": "^3.5.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@nestia/sdk": "^1.0.7",
    "@nestjs/cli": "^9.2.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.8",
    "@prisma/client": "^4.10.1",
    "@types/cls-hooked": "^4.3.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.5",
    "@types/jest": "29.4.0",
    "@types/node": "^18.13.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.4.2",
    "jest-mock-extended": "^3.0.1",
    "nestia": "^4.0.5",
    "pm2": "^5.2.2",
    "prettier": "^2.8.4",
    "prisma": "^4.10.1",
    "rimraf": "^4.1.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.2",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
